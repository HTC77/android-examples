<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntentsActivity">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="built-in Intents"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_webBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:onClick="onClickWebBrowser"
        android:text="Web browser"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/btn_launchMyBrowser"
        android:layout_alignEnd="@+id/btn_launchMyBrowser"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/btn_makeCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:onClick="onClickMakeCalls"
        android:text="Make Calls"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/btn_webBrowser"
        android:layout_alignLeft="@+id/btn_launchMyBrowser"
        android:layout_alignStart="@+id/btn_launchMyBrowser" />

    <Button
        android:id="@+id/btn_showMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:onClick="onClickShowMap"
        android:text="Show Map"
        android:layout_below="@+id/btn_makeCalls"
        android:layout_alignLeft="@+id/btn_makeCalls"
        android:layout_alignStart="@+id/btn_makeCalls" />

    <Button
        android:id="@+id/btnPickContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_showMap"
        android:layout_alignStart="@+id/btn_webBrowser"
        android:layout_alignLeft="@+id/btn_webBrowser"
        android:layout_marginTop="18dp"
        android:onClick="onContactPick"
        android:text="Pick Contact" />

    <Button
        android:id="@+id/btnDirectCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:onClick="onDirectCall"
        android:text="Direct call"
        android:layout_below="@+id/btnPickContact"
        android:layout_alignRight="@+id/btn_makeCalls"
        android:layout_alignEnd="@+id/btn_makeCalls" />

    <Button
        android:id="@+id/btn_launchMyBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="onClickLaunchMyBrowser"
        android:text="Launch my Browser"
        android:layout_below="@+id/btnDirectCall"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/btnBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_launchMyBrowser"
        android:layout_alignEnd="@+id/btn_launchMyBrowser"
        android:layout_alignRight="@+id/btn_launchMyBrowser"
        android:layout_marginTop="13dp"
        android:onClick="onLaunchBrowser"
        android:text="Launch a Browser" />
</RelativeLayout>